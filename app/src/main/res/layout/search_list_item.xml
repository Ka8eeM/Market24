<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginBottom="3dp"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        android:weightSum="6">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border_bg"
            android:layout_weight="3">

            <ImageView
                android:id="@+id/img_search_list_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:weightSum="4">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="Product Name . date"
                    android:textStyle="bold" />
                <LinearLayout
                    android:id="@+id/container_deatails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/product_name"
                    android:layout_alignParentLeft="true"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/user_name"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:gravity="start"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ads_product_name"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="1dp"
                        android:text="user name" />
                    <TextView
                        android:id="@+id/city_name"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_below="@id/ads_product_name"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:text="city" />




                </LinearLayout>

                <TextView
                    android:id="@+id/price_search_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/container_deatails"
                    android:layout_alignParentLeft="true"
                    android:text="Price"
                    android:textColor="@color/green" />


                <TextView
                    android:id="@+id/sub_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/container_deatails"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:text="category" />

                <TextView
                    android:id="@+id/category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sub_area"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:text="category" />

                <TextView
                    android:id="@+id/time_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/price_search_item"
                    android:layout_alignParentLeft="true"/>
                <ImageView
                    android:id="@+id/search_star_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/ic_favorite_border" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>