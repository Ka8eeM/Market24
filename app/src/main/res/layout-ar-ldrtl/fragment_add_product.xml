<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_container"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top">

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="@string/product_details"
                android:textAlignment="center"
                android:textSize="@dimen/settings_header_text_size" />

            <RelativeLayout
                android:id="@+id/relative1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text"
                android:layout_marginTop="5dp"
                android:background="@color/white">

                <LinearLayout
                    android:id="@+id/category_spinner_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Spinner
                        android:id="@+id/add_product_category_spinner"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_weight="1"
                        android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
                        android:foregroundTint="@color/green"
                        android:gravity="center" />

                    <Spinner
                        android:id="@+id/add_product_sub_category_spinner"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_weight="1"
                        android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
                        android:foregroundTint="@color/green"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/category_spinner_container"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Spinner
                        android:id="@+id/add_product_area_spinner"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_weight="1"
                        android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
                        android:foregroundTint="@color/green"
                        android:gravity="center" />

                    <Spinner
                        android:id="@+id/add_product_sub_area_spinner"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_weight="1"
                        android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
                        android:foregroundTint="@color/green"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linear"
                    android:background="@drawable/back3"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edit_text_ads_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:hint="@string/product_name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/settings_header_text_size" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/relative2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear_name">

                    <CheckBox
                        android:id="@+id/check_other_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        android:text="@string/Other_area"
                        android:textSize="@dimen/settings_sup_header_text_size" />

                    <EditText
                        android:visibility="gone"
                        android:id="@+id/other_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@id/check_other_area"
                        android:background="@drawable/border_edit"
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:hint="@string/area"
                        android:inputType="text"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        android:textSize="@dimen/settings_sup_header_text_size" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/price_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relative1"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:weightSum="2">

                <EditText
                    android:id="@+id/edit_text_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_edit"
                    android:gravity="center_vertical"
                    android:hint="@string/price"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:singleLine="true" />


                <CheckBox
                    android:id="@+id/switch_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="@string/negotiable_salary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/take_img_container"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/price_container"
                android:layout_margin="8dp"
                android:background="@drawable/background_white"
                android:orientation="vertical"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/take_img"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_add_a_photo_24" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_product_image"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginVertical="10dp"
                    android:layout_weight="3"
                    android:background="@color/white"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/empty"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginVertical="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/take_photo" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/btn_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_cancel_add_product"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/back_btn"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/settings_sup_header_text_size" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/back_btn"
            android:text="@string/next"
            android:textColor="@color/white"
            android:textSize="@dimen/settings_sup_header_text_size" />
    </LinearLayout>
</RelativeLayout>