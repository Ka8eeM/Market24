<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageView
            android:id="@+id/fav_img_item"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/image1" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="2">

            <!--<TextView
                android:id="@+id/fav_prod_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="3dp"
                android:text="@string/desc"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/fav_salary_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:text="15"
                android:textAlignment="textEnd"
                android:textColor="@color/green"
                android:textSize="@dimen/settings_header_text_size"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />-->
            <TextView
                android:id="@+id/fav_prod_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Product Name . date"
                android:textStyle="bold" />
            <LinearLayout
                android:id="@+id/container_deatails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fav_prod_name"
                android:layout_alignParentLeft="true"
                android:weightSum="2"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/user_name"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ads_product_name"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="1dp"
                    android:text="user name" />
                <TextView
                    android:id="@+id/city_name"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_below="@id/ads_product_name"
                    android:layout_alignParentRight="true"
                    android:gravity="left"
                    android:text="city" />




            </LinearLayout>

            <TextView
                android:id="@+id/fav_salary_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/container_deatails"
                android:layout_alignParentLeft="true"
                android:text="Price"
                android:textColor="@color/green" />


            <TextView
                android:id="@+id/sub_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/container_deatails"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:text="category" />

            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sub_area"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:text="category" />

            <TextView
                android:id="@+id/time_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fav_salary_item"
                android:layout_alignParentLeft="true"/>
        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>